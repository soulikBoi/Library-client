<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="426.0" prefWidth="706.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.view.controller.MenuController">
    <children>
        <HBox alignment="CENTER" prefHeight="427.0" prefWidth="706.0" spacing="20.0">
            <children>
                <Button fx:id="search" mnemonicParsing="false" onAction="#searchButton" prefHeight="57.0" prefWidth="144.0" text="Search" />
                <Button fx:id="borrow" mnemonicParsing="false" onAction="#borrowButton" prefHeight="57.0" prefWidth="144.0" text="Borrow/return" />
                <Button fx:id="add" mnemonicParsing="false" onAction="#addButton" prefHeight="57.0" prefWidth="144.0" text="Add" />
                <Button fx:id="remove" mnemonicParsing="false" onAction="#removeButton" prefHeight="57.0" prefWidth="144.0" text="Remove" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </HBox>
        <Label alignment="TOP_CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="706.0" text="Menu of the library" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="25.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
